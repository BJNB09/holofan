{{! ENLISTA ENLACES GUARDADOS PARA DEVELOPER -ME-}}

<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">

                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>

                        <a href="/links/delete/{{id}}" class="m-2 btn btn-outline-danger">Borrar X</a> 
                        <a href="/links/edit/{{id}}" class="btn btn-outline-secondary">Editar /</a>
                        <a href="/links/play/{{id}}" class="btn btn-outline-secondary"> Play </a>
                        <a href="/links/pausa/{{id}}" class="btn btn-outline-secondary"> Pausa </a>
     
                    </div>
                </div>
            </div>
        {{else}} 
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay recursos a√∫n</p>
                    <a href="/links/add" class="href">Crea uno :)</a>
                </div>
            </div>   
        {{/each}}
    </div>
</div>